<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_of_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"

    android:background="@color/white"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toLeftOf="@id/service_message"
            android:src="@color/colorPrimary"/>

        <TextView
            android:id="@+id/service_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Docor with high certificate and big experience and a lot of tomatoes and apricot"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_message"
            android:text="Location : " />

        <TextView
            android:id="@+id/service_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rate" />
    </RelativeLayout>
</android.support.v7.widget.CardView>